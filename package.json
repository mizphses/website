{
  "name": "mizphs.es",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p -r dev:next 'gen:sass-type --watch'",
    "dev:next": "next dev",
    "build": "next build",
    "gen:sass-type": "typed-scss-modules src",
    "start": "next start",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "lint:style": "stylelint \"**/*.css\" \"**/*.scss\" --ignore-path .gitignore",
    "lint:style-fix": "stylelint \"**/*.css\" \"**/*.scss\" --ignore-path .gitignore --fix",
    "format": "biome format --write ./src",
    "format-check": "biome format ./src",
    "type-check": "tsc --noEmit",
    "fix": "run-p lint:fix lint:style-fix format type-check",
    "check": "run-p lint lint:style format-check type-check"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.8.2",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@monaco-editor/react": "^4.6.0",
    "@next/mdx": "^14.0.4",
    "@radix-ui/themes": "^2.0.3",
    "@tabler/icons": "^2.44.0",
    "@tabler/icons-react": "^2.44.0",
    "@types/lodash-es": "^4.17.12",
    "@types/mdx": "^2.0.10",
    "clsx": "^2.0.0",
    "danger": "^11.3.0",
    "html-react-parser": "^5.0.11",
    "jotai": "^2.6.0",
    "lodash-es": "^4.17.21",
    "microcms-js-sdk": "^2.7.0",
    "next": "14.0.3",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^9.0.1",
    "run-p": "^0.0.0",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/node": "^20",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.17",
    "@types/uuid": "^9.0.7",
    "typed-scss-modules": "^8.0.0",
    "typescript": "^5"
  }
}
